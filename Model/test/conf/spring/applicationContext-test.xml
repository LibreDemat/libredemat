<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>

  <bean id="exceptionHandlerAspect" class="org.libredemat.aspect.ExceptionHandlerAspect" />

  <bean id="jsmtpdMailService" class="org.libredemat.testtool.JsmtpdMailService"
        init-method="init" destroy-method="destroy">
	<property name="port" value="${mail.sender_port}" />
  </bean>

  <bean id="configurer"
    class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
    <property name="location">
      <value>model.properties</value>
    </property>
  </bean>

</beans>
