<?xml version="1.0"?>
<csv-mapping>

  <bean-mapping name="contract-generic"
    class="fr.capwebct.modules.payment.business.csv.ContractWrapper"
    csvHeader="true">
    
    <field-mapping name="Contract Id"
      type="fr.capwebct.modules.payment.business.Contract"
      position="0"
      attribute="contract"
      reformat="none"
      bean-ref="contractBean" />

    <field-mapping name="Contract Value"
      type="fr.capwebct.modules.payment.business.Contract"
      position="1"
      attribute="contract"
      reformat="none"
      bean-ref="contractBean" />

    <field-mapping name="Contract Date"
      type="fr.capwebct.modules.payment.business.Contract"
      position="2"
      attribute="contract"
      reformat="none"
      bean-ref="contractBean" />

    <field-mapping name="Contract Label"
      type="fr.capwebct.modules.payment.business.Contract"
      position="3"
      attribute="contract"
      reformat="none"
      bean-ref="contractBean" />

    <field-mapping name="Buy Price"
      type="fr.capwebct.modules.payment.business.Contract"
      position="4"
      attribute="contract"
      reformat="none"
      bean-ref="contractBean" />

    <field-mapping name="Min Buy"
      type="fr.capwebct.modules.payment.business.Contract"
      position="5"
      attribute="contract"
      reformat="none"
      bean-ref="contractBean" />

    <field-mapping name="Max Buy"
      type="fr.capwebct.modules.payment.business.Contract"
      position="6"
      attribute="contract"
      reformat="none"
      bean-ref="contractBean" />

    <field-mapping name="External Family Account Id"
      type="java.lang.String"
      position="7"
      attribute="externalFamilyAccountId"
      reformat="none"
      bean-ref="none" />

    <field-mapping name="External Individual Id"
      type="java.lang.String"
      position="8"
      attribute="externalIndividualId"
      reformat="none"
      bean-ref="none" />

  </bean-mapping>
  
    <bean-mapping name="contractBean"
      class="fr.capwebct.modules.payment.business.Contract"
      csvHeader="true">
  
      <field-mapping name="Contract Id"
      type="java.lang.String"
      position="0"
      attribute="contractId"
      reformat="none"
      bean-ref="none" />

    <field-mapping name="Contract Value"
      type="java.lang.String"
      position="1"
      attribute="contractValue"
      reformat="value"
      bean-ref="none" />

    <field-mapping name="Contract Date"
      type="java.lang.String"
      position="2"
      attribute="contractDate"
      reformat="date"
      bean-ref="none" />

    <field-mapping name="Contract Label"
      type="java.lang.String"
      position="3"
      attribute="contractLabel"
      reformat="none"
      bean-ref="none" />

    <field-mapping name="Buy Price"
      type="java.lang.String"
      position="4"
      attribute="buyPrice"
      reformat="value"
      bean-ref="none" />

    <field-mapping name="Min Buy"
      type="java.lang.String"
      position="5"
      attribute="buyMin"
      reformat="value"
      bean-ref="none" />

    <field-mapping name="Max Buy"
      type="java.lang.String"
      position="6"
      attribute="buyMax"
      reformat="value"
      bean-ref="none" />

    </bean-mapping>

</csv-mapping>
