<?xml version="1.0"?>
<csv-mapping>

  <bean-mapping name="invoice-generic"
    class="fr.capwebct.modules.payment.business.csv.InvoiceWrapper"
    csvHeader="true">
    
    <field-mapping name="Invoice Id"
      type="java.lang.String"
      position="0"
      attribute="invoice"
      reformat="none"
      bean-ref="invoiceBean" />

    <field-mapping name="Invoice Value"
      type="java.lang.String"
      position="1"
      attribute="invoice"
      reformat="none"
      bean-ref="invoiceBean" />

    <field-mapping name="Invoice Date"
      type="java.lang.String"
      position="2"
      attribute="invoice"
      reformat="none"
      bean-ref="invoiceBean" />

    <field-mapping name="Invoice Label"
      type="java.lang.String"
      position="3"
      attribute="invoice"
      reformat="none"
      bean-ref="invoiceBean" />

    <field-mapping name="Invoice Expiration Date"
      type="java.lang.String"
      position="4"
      attribute="invoice"
      reformat="none"
      bean-ref="invoiceBean" />

    <field-mapping name="Invoice Payment Date"
      type="java.lang.String"
      position="5"
      attribute="invoice"
      reformat="none"
      bean-ref="invoiceBean" />

    <field-mapping name="Invoice Paid"
      type="java.lang.Boolean"
      position="6"
      attribute="invoice"
      reformat="none"
      bean-ref="invoiceBean" />

    <field-mapping name="External Family Account Id"
      type="java.lang.String"
      position="7"
      attribute="externalFamilyAccountId"
      reformat="none"
      bean-ref="none" />

  </bean-mapping>
  
  <bean-mapping name="invoiceBean"
    class="fr.capwebct.modules.payment.business.Invoice"
    csvHeader="true">
    
    <field-mapping name="Invoice Id"
      type="java.lang.String"
      position="0"
      attribute="invoiceId"
      reformat="none"
      bean-ref="none" />

    <field-mapping name="Invoice Value"
      type="java.lang.String"
      position="1"
      attribute="invoiceValue"
      reformat="value"
      bean-ref="none" />

    <field-mapping name="Invoice Date"
      type="java.lang.String"
      position="2"
      attribute="invoiceDate"
      reformat="date"
      bean-ref="none" />

    <field-mapping name="Invoice Label"
      type="java.lang.String"
      position="3"
      attribute="invoiceLabel"
      reformat="none"
      bean-ref="none" />

    <field-mapping name="Invoice Expiration Date"
      type="java.lang.String"
      position="4"
      attribute="invoiceExpirationDate"
      reformat="date"
      bean-ref="none" />

    <field-mapping name="Invoice Payment Date"
      type="java.lang.String"
      position="5"
      attribute="invoicePaymentDate"
      reformat="date"
      bean-ref="none" />

    <field-mapping name="Invoice Paid"
      type="java.lang.Boolean"
      position="6"
      attribute="invoicePayed"
      reformat="none"
      bean-ref="none" />

  </bean-mapping>
  
</csv-mapping>