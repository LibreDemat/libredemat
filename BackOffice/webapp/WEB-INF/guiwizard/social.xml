<?xml version="1.0" encoding="UTF-8" ?>

<cvqmanager xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
			xsi:noNamespaceSchemaLocation="managers.xsd" >
					
  <processes group="social" caption="Social" icon="pictoSocial" order="8">
	<process name="eemprunt">
		<label>Demande de télé-assistance</label>
		<record>fr.cg95.cvq.bo.social.RemoteSupportRequestRecord</record>
		<persistence>fr.cg95.cvq.bo.social.RemoteSupportPersistence</persistence>
		
	  	<state name="display">
			<form>/jsp/bo/process/displayrequester</form>
			<form scope="request">/jsp/bo/process/social/displayassistance</form>
		</state>
	  	<state name="check">
			<form scope="request">/jsp/bo/process/social/checkassistance</form>
	  	</state>
	  	<state name="print">
			<form scope="request">/jsp/bo/process/social/printassistance</form>
	  	</state>
	</process>
	<process name="eDomestichelp">
		<label>Demande d'aide ménagère</label>
		<record>fr.cg95.cvq.bo.social.DomesticHelpRequestRecord</record>
		<persistence>fr.cg95.cvq.bo.social.DomesticHelpPersistence</persistence>
		
	  	<state name="display">
			<form>/jsp/bo/process/displayrequester</form>
			<form scope="request">/jsp/bo/process/social/displaydomestichelp_requestkind</form>
			<form scope="request">/jsp/bo/process/social/displaydomestichelp_referent</form>
			<form scope="request">/jsp/bo/process/social/displaydomestichelp_subject</form>
			<form scope="request">/jsp/bo/process/social/displaydomestichelp_tutor</form>
			<form scope="request" condition="requesterHasSpouse==True">/jsp/bo/process/social/displaydomestichelp_spouse</form>
			<form scope="request">/jsp/bo/process/social/displaydomestichelp_currentdwelling</form>
			<form scope="request">/jsp/bo/process/social/displaydomestichelp_previousdwelling</form>
			<form scope="request">/jsp/bo/process/social/displaydomestichelp_requesterincomes</form>
			<form scope="request" condition="requesterHasSpouse==True">/jsp/bo/process/social/displaydomestichelp_spouseincomes</form>	
			<form scope="request">/jsp/bo/process/social/displaydomestichelp_realassets</form>
			<form scope="request">/jsp/bo/process/social/displaydomestichelp_notrealassets</form>
			<form scope="request">/jsp/bo/process/social/displaydomestichelp_taxesamount</form>
		</state>
	  	<state name="check">
			<form scope="request">/jsp/bo/process/social/checkdomestichelp</form>
	  	</state>
	  	<state name="print">
			<form scope="request">/jsp/bo/process/social/printdomestichelp</form>
	  	</state>
	</process>
	<process name="eHandicapAllowance">
		<label>Compensation du handicap</label>
		<record>fr.cg95.cvq.bo.social.HandicapAllowanceRequestRecord</record>
		<persistence>fr.cg95.cvq.bo.social.HandicapAllowancePersistence</persistence>
		
	  	<state name="display">
			<form>/jsp/bo/process/displayrequester</form>
			<form scope="request">/jsp/bo/process/social/displayhandicapallowance</form>
		</state>
	  	<state name="check">
			<form scope="request">/jsp/bo/process/social/checkhandicapallowance</form>
	  	</state>
	  	<state name="print">
			<form scope="request">/jsp/bo/process/social/printhandicapallowance</form>
	  	</state>
	</process>
  </processes>
  
</cvqmanager>
					