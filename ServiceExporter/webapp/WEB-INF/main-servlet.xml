<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">
<beans>

	<!-- Back Office Web Services -->
	
	<bean name="/AgentTaskService"
		class="org.springframework.remoting.httpinvoker.HttpInvokerServiceExporter">
		<property name="service" ref="agentTaskService" />
		<property name="serviceInterface" value="fr.cg95.cvq.exporter.service.bo.IAgentTaskService" />
	</bean>

	<bean name="/ProvisioningService"
		class="org.springframework.remoting.caucho.HessianServiceExporter">
		<property name="service" ref="provisioningService" />
		<property name="serviceInterface" value="fr.cg95.cvq.exporter.service.bo.IProvisioningService" />
	</bean>

	<!--  Front Office Web Services -->
	
	<bean name="/HomeFolderService"
		class="org.springframework.remoting.httpinvoker.HttpInvokerServiceExporter">
		<property name="service" ref="homeFolderWebService" />
		<property name="serviceInterface" value="fr.cg95.cvq.exporter.service.fo.IHomeFolderService" />
	</bean>

	<bean name="/IndividualService"
		class="org.springframework.remoting.httpinvoker.HttpInvokerServiceExporter">
		<property name="service" ref="individualWebService" />
		<property name="serviceInterface" value="fr.cg95.cvq.exporter.service.fo.IIndividualService" />
	</bean>

	<bean name="/RequestService"
		class="org.springframework.remoting.httpinvoker.HttpInvokerServiceExporter">
		<property name="service" ref="requestWebService" />
		<property name="serviceInterface" value="fr.cg95.cvq.exporter.service.fo.IRequestService" />
	</bean>

	<bean name="/DocumentService"
		class="org.springframework.remoting.httpinvoker.HttpInvokerServiceExporter">
		<property name="service" ref="documentWebService" />
		<property name="serviceInterface" value="fr.cg95.cvq.exporter.service.fo.IDocumentService" />
	</bean>

</beans>
