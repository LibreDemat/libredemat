  <!-- *******************************************************************  -->
  <!-- ***************** Requests Seasons Job Configuration **************  -->
  <!-- *******************************************************************  -->

  <bean id="requestSeasonsJob" class="fr.cg95.cvq.service.request.job.RequestSeasonsJob">
