<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>

  <bean id="configurationBean_jouylemoutier"
    class="fr.cg95.cvq.service.authority.LocalAuthorityConfigurationBean" init-method="init">
    <property name="name" value="jouylemoutier"/>
    <property name="defaultServerName" value="vosdemarches.jouylemoutier.fr"/>
    <property name="displayTutorsInAccountCreation" value="false" />
    <property name="sessionFactory">
      <ref bean="sessionFactory_jouylemoutier" />
    </property>
    <property name="paymentServices">
      <map>
        <entry>
          <key>
            <ref bean="spplusPaymentProvider" />
          </key>
          <bean class="fr.cg95.cvq.payment.PaymentServiceBean">
            <property name="broker" value="Régie SP-PLUS de la ville de Jouy-le-Moutier"></property>
            <property name="friendlyLabel" value="Service de billetterie"></property>
            <property name="requestTypes">
              <list>
                <value>Place Reservation</value>
              </list>
            </property>
            <property name="serviceProperties">
              <map>
                <entry>
                  <key>
                    <value>spplusMerchkey</value>
                  </key>
                  <value>ab 36 36 c1 3b 47 da 90 b8 3d 07 7a ae 06 d8 a7 db 9f df 6d 13 23 4c 0c</value>
                </entry>
                <entry>
                  <key>
                    <value>spplusSiret</value>
                  </key>
                  <value>21950323200015-01</value>
                </entry>
                <entry>
                  <key>
                    <value>spplusUserCallbackUrl</value>
                  </key>
                  <value>https://vosdemarches.jouylemoutier.fr/FrontOffice/paymentNoCommit.do</value>
                </entry>
              </map>
            </property>
          </bean>
        </entry>
      </map>
    </property>
    <property name="ecitizenValidationNotifications">
      <map>
        <entry>
          <key>
            <value>Place Reservation</value>
          </key>
          <map>
            <entry key="mailData" value="PlaceReservationMailConfirmation" />
            <entry key="attachPdf" value="true" />
          </map>
        </entry>
      </map>
    </property>
    <property name="agentNotifications">
      <map>
        <entry>
          <key><value>NotCommitPaymentAlert</value></key>
          <map>
            <entry key="mailSendTo" value="accueilannexe@jouylemoutier.fr"/>
            <entry key="mailSubject" value="[CapDémat] Alerte Paiement"/>
            <entry key="mailData" value="NotCommitedPaymentsAlert"/>
          </map>
        </entry>
      </map>
    </property>
    <property name="paymentNotifications">
      <map>
        <entry>
          <key><value>CommitPaymentConfirmation</value></key>
          <map>
            <entry key="mailSubject" value="[CapDémat] Confirmation de paiement"/>
            <entry key="mailData" value="CommitPaymentNotification"/>
          </map>
        </entry>
      </map>
    </property>
  </bean>

  <bean id="sessionFactory_jouylemoutier"
    class="org.springframework.orm.hibernate3.LocalSessionFactoryBean"
    parent="abstractSessionFactory">
    <property name="dataSource">
      <ref bean="pgDataSource_jouylemoutier" />
    </property>
  </bean>

  <bean id="pgDataSource_jouylemoutier" class="com.mchange.v2.c3p0.ComboPooledDataSource">
    <property name="driverClass">
      <value>org.postgresql.Driver</value>
    </property>
    <property name="jdbcUrl">
      <value>jdbc:postgresql://localhost:5432/capdemat_jouylemoutier</value>
    </property>
    <property name="user">
      <value>capdemat</value>
    </property>
    <property name="password">
      <value>capdematpass</value>
    </property>
    <property name="acquireIncrement" value="3" />
    <property name="initialPoolSize" value="0" />
    <property name="minPoolSize" value="0" />
    <property name="maxPoolSize" value="24" />
    <property name="maxStatements" value="0"/>
    <property name="maxIdleTime" value="300" />
  </bean>

</beans>
