<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>

  <bean id="configurationBean_franconville"
    class="fr.cg95.cvq.service.authority.LocalAuthorityConfigurationBean" init-method="init">
    <property name="name" value="franconville"/>
    <property name="postalCode" value="95130"/>
    <property name="displayTitle" value="Franconville"/>
    <property name="urls">
      <list>
        <value>cartevaloise.ville-franconville.fr</value>
        <value>vosdemarches.ville-franconville.fr</value>
      </list>
    </property>
    <property name="foAccountTabs">
      <list>
        <value>welcome</value>
        <value>individuals</value>
        <value>requests</value>
        <value>documents</value>
        <value>services</value>
        <value>checklist</value>
        <value>caddy</value>
      </list>
    </property>
    <property name="documentDigitalizationEnabled" value="false" />
    <property name="sessionFactory">
      <ref bean="sessionFactory_franconville" />
    </property>
    <property name="paymentServices">
      <map>
        <entry>
          <key>
            <ref bean="wynidPaymentProvider" />
          </key>
          <bean class="fr.cg95.cvq.payment.PaymentServiceBean">
            <property name="broker" value="Régie Wynid de la ville de Franconville" />
            <property name="friendlyLabel" 
              value="Service scolaire, péri-scolaire et centre de loisirs" />
            <property name="requestTypes">
              <list>
                <value>School Canteen Registration</value>
                <value>Perischool Activity Registration</value>
                <value>Recreation Activity Registration</value>
              </list>
            </property>
            <property name="serviceProperties">
              <map>
                <entry>
                  <key>
                    <value>wynidBaseUrl</value>
                  </key>
                  <value>https://cartevaloise.ville-franconville.fr/FrontOffice/pay.do?transition=payment</value>
                </entry>
                <entry>
                  <key>
                    <value>wynidCaisses</value>
                  </key>
                  <props>
                    <prop key="ville-franconville-borne1">11</prop>
                    <prop key="ville-franconville-borne2">12</prop>
                    <prop key="ville-franconville-borne3">13</prop>
                  </props>
                </entry>
              </map>
            </property>
          </bean>
        </entry>
      </map>
    </property>
    <property name="externalServices">
      <map>
        <entry>
          <key>
            <ref bean="horanetExternalService" />
          </key>
          <bean class="fr.cg95.cvq.external.ExternalServiceBean">
            <property name="requestTypes">
              <list>
                <value>School Canteen Registration</value>
                <value>Perischool Activity Registration</value>
                <value>Recreation Activity Registration</value>
              </list>
            </property>
            <property name="supportAccountsByHomeFolder">
              <value>true</value>
            </property>
            <property name="supportAccountsByRequest">
              <value>false</value>
            </property>
            <property name="serviceProperties">
              <map>
                <entry>
                  <key>
                    <value>badgeNumberManagedByHN</value>
                  </key>
                  <value>true</value>
                </entry>
              </map>
            </property>
          </bean>
        </entry>
      </map>
    </property>
    <property name="agentNotifications">
      <map>
        <entry>
          <key><value>NotCommitPaymentAlert</value></key>
          <map>
            <entry key="mailSendTo" value="cartevaloise@valdoise.fr"/>
            <entry key="mailSubject" value="[CapD�mat] Alerte Paiement"/>
            <entry key="mailData" value="NotCommitedPaymentsAlert"/>
          </map>
        </entry>
      </map>
    </property>
    <property name="paymentNotifications">
      <map>
        <entry>
          <key><value>CommitPaymentConfirmation</value></key>
          <map>
            <entry key="mailSubject" value="[CapD�mat] Confirmation de paiement"/>
            <entry key="mailData" value="CommitPaymentNotification"/>
          </map>
        </entry>
      </map>
    </property>
  </bean>

  <bean id="sessionFactory_franconville"
    class="org.springframework.orm.hibernate3.LocalSessionFactoryBean"
    parent="abstractSessionFactory">
    <property name="dataSource">
      <ref bean="pgDataSource_franconville" />
    </property>
  </bean>

  <bean id="pgDataSource_franconville" class="com.mchange.v2.c3p0.ComboPooledDataSource">
    <property name="driverClass">
      <value>org.postgresql.Driver</value>
    </property>
    <property name="jdbcUrl">
      <value>jdbc:postgresql://localhost:5432/cartevaloise_franconville</value>
    </property>
    <property name="user">
      <value>cvq95</value>
    </property>
    <property name="password">
      <value>cvq95pass</value>
    </property>
    <property name="acquireIncrement" value="3" />
    <property name="initialPoolSize" value="3" />
    <property name="minPoolSize" value="3" />
    <property name="maxPoolSize" value="12" />
    <property name="maxStatements" value="0"/>
  </bean>

</beans>
