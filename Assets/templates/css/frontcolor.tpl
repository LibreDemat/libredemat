/**
 #header="@header-color@"
 #background-color="@background-color@"
 #button="@button-color@"
 #streamer="@streamer-color@"
*/

#banner {
        background: url(../img/banner.jpg) no-repeat;
        width: 100%;
        height: 78px;
}

#banner div.productlogo {
	display: @product-logo@;
}

#navigation #identifier div.logout {
        background-color: @background-color@;
        color: @button-color@;
}

#navigation #identifier div.logout:hover {
        background-color: @button-color@;
        color: @background-color@;
}

#tabulation div {
        background-color: @background-color@;
}

#tabulation #contents #action #title h1 {
        color: @header-color@;
}

#tabulation #contents #action #body #title h1 {
        color: @header-color@;
}

#tabulation #contents #action #body {
        color: @button-color@;
}

#tabulation #contents #action #body div.select:hover {
        background-color: @button-color@;
        color: @background-color@;
}

#tabulation #contents #action #body div.action {
        background-color: @background-color@;
}

#tabulation #contents #action #body div.action:hover {
        background-color: @button-color@;
        color: @background-color@;
}

#tabulation #contents #form #title h1 {
        color: @header-color@;
}

#tabulation #contents #form #body {
        background-color: @background-color@;
}

#tabulation #contents #form #body div {
        background-color: @background-color@;
}

#tabulation #contents #form #body #resultsnav div.previous {
        color: @button-color@;
}

#tabulation #contents #form #body #resultsnav div.previous:hover {
        background-color: @button-color@;
        color: @background-color@;
}

#tabulation #contents #form #body #resultsnav div.next {
        color: @button-color@;
}

#tabulation #contents #form #body #resultsnav div.next:hover {
        background-color: @button-color@;
        color: @background-color@;
}

#tabulation #contents #form #body #search div.search {
        color: @button-color@;
}

#tabulation #contents #form #body #search div.search:hover {
        background-color: @button-color@;
        color: @background-color@;
}

tr.table-header {
	color: @background-color@;
	background-color: @header-color@;
}

tr.table-oddrow {
	color: @header-color@;
	background-color: @background-color@;
}

tr.table-evenrow {
	color: @header-color@;
	background-color: @streamer-color@;
}

#contents #form div.info-button {
        background-color: @background-color@;
}

#contents #form div.info-button .button {
        color: @button-color@;
}

#contents #form div.info-button .button:hover {
        background-color: @button-color@;
        color: @background-color@;
}

#contents #form #button-area {
        background-color: @background-color@;
}

#contents #form #button-area div {
        background-color: @background-color@;
        color: @button-color@;
}

#contents #form #button-area div:hover {
        background-color: @button-color@;
        color: @background-color@;
}

#contents #form #welcome .button {
        background-color: @background-color@;
        color: @button-color@;
}

#contents #form #welcome .button:hover {
        background-color: @button-color@;
        color: @background-color@;
}

#contents #form #welcome .radio {
        background-color: @background-color@;
        color: @button-color@;
}

#contents #form #welcome .radio:hover {
        background-color: @button-color@;
        color: @background-color@;
}

