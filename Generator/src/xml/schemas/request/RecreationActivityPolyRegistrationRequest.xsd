          </xs:documentation>
          <xs:documentation xml:lang="fr" source="http://www.libredemat.org/schema/shortdesc">
            Adresse
          </xs:documentation>
          <xs:appinfo>
             <model namespace="users" isTiedToRequest="true" /> 
            <common>
              <step name="authorization" />
            </common>
            <fo />
