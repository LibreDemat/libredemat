          </xs:documentation>
          <xs:appinfo>
            <model namespace="users" isTiedToRequest="true" />
            <common>
              <step name="authorization" />
            </common>
            <fo />
            <bo />
            <xslfo>
              <element blockId="4" line="2" column="0">
                <complexTemplate />
              </element>
            </xslfo>
          </xs:appinfo>
        </xs:annotation>
      </xs:element>
      <xs:element name="HomePhone" type="cvq:PhoneType" minOccurs="0">
        <xs:annotation>
          <xs:documentation xml:lang="fr" source="http://www.cg95.fr/cvq/schema/longdesc">
            Téléphone du domicile de la personne autorisée
          </xs:documentation>
          <xs:documentation xml:lang="fr" source="http://www.cg95.fr/cvq/schema/shortdesc">
            Téléphone domicile
          </xs:documentation>
          <xs:appinfo>
            <common>
              <step name="authorization" />
            </common>
            <fo />
            <bo />
            <xslfo>
              <element blockId="4" line="3" column="0">
                <string valueWeight="3" />
              </element>
            </xslfo>
          </xs:appinfo>
        </xs:annotation>
      </xs:element>
      <xs:element name="OfficePhone" type="cvq:PhoneType" minOccurs="0">
        <xs:annotation>
          <xs:documentation xml:lang="fr" source="http://www.cg95.fr/cvq/schema/longdesc">
            Téléphone du bureau de la personne autorisée
          </xs:documentation>
          <xs:documentation xml:lang="fr" source="http://www.cg95.fr/cvq/schema/shortdesc">
            Téléphone bureau
          </xs:documentation>
          <xs:appinfo>
            <common>
              <step name="authorization" />
            </common>
            <fo />
            <bo />
            <xslfo>
              <element blockId="4" line="4" column="0">
                <string valueWeight="3" />
              </element>
            </xslfo>
          </xs:appinfo>
        </xs:annotation>
      </xs:element>
    </xs:sequence>
  </xs:complexType>

</xs:schema>
