  <xs:complexType name="CurrentSchool2Type">
    <xs:annotation>
      <xs:documentation xml:lang="fr" source="http://www.libredemat.org/schema/longdesc">
        Informations conçernant le sujet de la demande
      </xs:documentation>
      <xs:documentation xml:lang="fr" source="http://www.libredemat.org/schema/shortdesc">
        Sujet
      </xs:documentation>
    </xs:annotation>
    <xs:sequence>
      <xs:element name="CurrentSchoolName" type="xs:string" minOccurs="0" default="">
        <xs:annotation>
          <xs:documentation xml:lang="fr" source="http://www.libredemat.org/schema/longdesc">
            Choix de l'école d'inscription
          </xs:documentation>
          <xs:documentation xml:lang="fr" source="http://www.libredemat.org/schema/shortdesc">
            Nom de l'école actuelle
          </xs:documentation>
          <xs:documentation xml:lang="en" source="http://www.libredemat.org/schema/longdesc">
            The school in which the child is registered
          </xs:documentation>
          <xs:appinfo>
           <common>
             <step name="registration" />
           </common>
           <fo />
           <bo column="2" />
           <pdf />
          </xs:appinfo>
        </xs:annotation>
      </xs:element>
      <xs:element name="CurrentSchoolAddress" type="xs:string" minOccurs="0" default="">
        <xs:annotation>
          <xs:documentation xml:lang="fr" source="http://www.libredemat.org/schema/longdesc">
            L'adresse de l'école dans laquelle est inscrit l'enfant
          </xs:documentation>
          <xs:documentation xml:lang="fr" source="http://www.libredemat.org/schema/shortdesc">
            Adresse de l'école actuelle
          </xs:documentation>
          <xs:documentation xml:lang="en" source="http://www.libredemat.org/schema/longdesc">
            The address of the school in which the child is registered
          </xs:documentation>
