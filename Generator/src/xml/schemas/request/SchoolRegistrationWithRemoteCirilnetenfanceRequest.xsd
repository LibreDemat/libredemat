            <common>
              <step name="registration" />
            </common>
            <fo>
              <textarea rows="3" />
            </fo>
            <bo column="2" />
            <pdf />
          </xs:appinfo>
        </xs:annotation>
      </xs:element>

      <xs:element name="CurrentSection" type="cvq:SectionType" minOccurs="0"
        default="Unknown">
