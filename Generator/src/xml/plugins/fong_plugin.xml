<?xml version="1.0" encoding="UTF-8"?>
<plugin id="fong" classname="fr.cg95.cvq.generator.plugins.fo.FoPlugin">

  <documentation>
    <!-- for elements, we only want shortdesc information -->
    <element parent="element" source="http://www.cg95.fr/cvq/schema/shortdesc"/>
    <!-- for other elements, we want all information -->
    <element parent="*" source="*"/>
  </documentation>

  <appinfo>
    <!-- we want fo nodes information for requests, elements, and properties -->
    <element parent="request" node="common"/>
    <element parent="element,property" node="common,fo"/>
  </appinfo>
  
  <configuration>
  	<output dir="BackOfficeNG" />
  </configuration>
  
</plugin>
