<?xml version="1.0" encoding="UTF-8"?>
<!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->
<!--Configuration du portail-->
<!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->
<pict-registry style="valdoise"
	xsi:schemaLocation="http://www.zenexity.com/pict/portal/registry_1_0.xsd"
	xmlns="http://www.zenexity.com/pict/portal/registry"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->
	<!--Definition de la classification-->
	<!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->
	<classes>
		<category id="communaute" title="CommunautÃ©s">
			<class id="tous" title="Tout le monde" />
			<class id="authentifies" title="Habitants authentifiÃ©s" />
		</category>
	</classes>
	<!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->
	<!--Definition des instances de portlets-->
	<!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->
	<portlet-instances>
		<package id="cvq" title="CVQ E-citoyen">
			<portlet-instance class="communaute.tous" definition="com.zenexity.pict.cvq.fo-login" 
				id="fo-login" title="Ecitizen login">
				<config-parameter name="title">
					<value>Authentification</value>
				</config-parameter>
			</portlet-instance>
			<portlet-instance class="communaute.authentifies" definition="com.zenexity.pict.cvq.fo-individuals-syn" 
				id="fo-individuals-syn" title="Home folder individuals">
				<config-parameter name="title">
					<value>Les individus du foyer</value>
				</config-parameter>
			</portlet-instance>
			<portlet-instance class="communaute.authentifies" definition="com.zenexity.pict.cvq.fo-individuals-detail" 
				id="fo-individuals-detail" title="Home folder individual detail">
				<config-parameter name="title">
					<value>DÃ©tail de l'individu</value>
				</config-parameter>
			</portlet-instance>
			<portlet-instance class="communaute.authentifies" definition="com.zenexity.pict.cvq.fo-requests-syn" 
				id="fo-requests-syn" title="Home folder requests summary">
				<config-parameter name="title">
					<value>Les demandes du foyer</value>
				</config-parameter>
			</portlet-instance>
			<portlet-instance class="communaute.authentifies" definition="com.zenexity.pict.cvq.fo-requests-list" 
				id="fo-requests-list" title="Home folder requests list">
				<config-parameter name="title">
					<value>Liste des demandes</value>
				</config-parameter>
			</portlet-instance>
			<portlet-instance class="communaute.authentifies" definition="com.zenexity.pict.cvq.fo-toolbar" 
				id="fo-toolbar" title="Home folder toolbar">
				<config-parameter name="title">
					<value>Boite Ã  outils</value>
				</config-parameter>
			</portlet-instance>
			<portlet-instance class="communaute.authentifies" definition="com.zenexity.pict.cvq.fo-requests-create" 
				id="fo-requests-create" title="Request creation">
				<config-parameter name="title">
					<value>Nouvelle demande</value>
				</config-parameter>
			</portlet-instance>
		</package>
	</portlet-instances>
	<!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->
	<!--Hierarchie des pages-->
	<!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->
	<pages>
		<page id="accueil" title="Accueil" layout="default" class="communaute.tous">
	      <window id="authentification" portlet-instance="cvq.fo-login" container="main"/>
		</page>
		<page id="foyer" title="Mon espace foyer" layout="twoColumns" class="communaute.authentifies">
	      <window id="individuals-syn" portlet-instance="cvq.fo-individuals-syn" container="narrow"/>
	      <window id="individuals-detail" portlet-instance="cvq.fo-individuals-detail" container="wide"/>
		</page>
		<page id="services" title="Mes services" layout="twoColumns" class="communaute.authentifies">
	      <window id="requests-syn" portlet-instance="cvq.fo-requests-syn" container="narrow"/>
	      <window id="toolbar" portlet-instance="cvq.fo-toolbar" container="wide"/>
	      <window id="requests-list" portlet-instance="cvq.fo-requests-list" container="wide"/>
	      <window id="requests-create" portlet-instance="cvq.fo-requests-create" container="wide"/>
		</page>
	</pages>
</pict-registry>

		